<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:key="show_all_button"
        android:title="全体表示" />
    <Preference
        android:key="show_balance"
        android:title="残額表示" />
    <Preference
        android:key="export"
        android:title="エクスポート"
        android:summary="csv,markdownで共有"/>
    <Preference
        android:key="csvImport"
        android:title="csvインポート"
        android:summary="csvファイルから読み込み" />
    <PreferenceCategory android:title="Delete">

        <Preference
            android:key="delete"
            android:title="テーブル削除" />

    </PreferenceCategory>

    <PreferenceCategory android:title="その他">
        <Preference
            android:title="アプリバージョン"
            android:summary="@string/versionName"/>
        <Preference
            android:key="database_table"
            android:title="現在のデータベーステーブル名" />
        <Preference
            android:key="goToGitHub"
            android:title="GitHub"
            android:summary="このアプリのリポジトリを開きます">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/oha-yashi/MoneyControl_public"/>
        </Preference>
        <Preference
            android:key="prefTest"
            android:title="テストスペース" />
    </PreferenceCategory>

</PreferenceScreen>